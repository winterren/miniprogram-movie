/* client/pages/comment/comment.wxss */
/* 内容 */
.content{
  width: 700rpx;
  margin:20rpx auto;
}
/* 评语 */
.comment{
  padding: 25rpx 35rpx;
  background: #FFF;
  border: 4rpx solid #eee;
  margin-bottom: 25rpx;
}
.comment--person{
  padding-bottom: 25rpx;
  display: flex;
}
.avatar{
  display: inline-block;
  vertical-align: middle;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f5e069;
}
.comment__info{
  margin-left: 30rpx;
  display: inline-block;
  font-size: 35rpx;
  line-height: 80rpx;
  height: 80rpx;
  color: #454545;
}
.comment--text{
  font-size: 30rpx;
  line-height: 44rpx;
}
.comment--voice{
  font-size: 30rpx;
  line-height: 44rpx;
  border:1px solid #ccc;
  background: #eee;
  border-radius: 10rpx;
  padding: 10rpx 30rpx;
  color: #494949;
}
/* 底部 */
.footer{
  height: 80rpx;
}
.foot-tab{
  border-top:1px solid #ccc;
  height: 80rpx;
  position: fixed;
  bottom: 0rpx;
  background: #FFF;
  display: flex;
  width: 100%;
  justify-content: space-around;
}
.foot-tab__btn--home{
  font-size: 32rpx;
  line-height: 80rpx;
  height: 80rpx;
  color:#ccc;
}