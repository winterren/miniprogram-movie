/* 内容 */
.content{
  width: 700rpx;
  margin:20rpx auto;
  text-align: center;
}
/* 电影部分 */
.movie-post{
  width:200rpx;
  height: 315rpx;
}
.movie-title{
  font-size: 44rpx;
  /* font-weight: bolder; */
  line-height: 52rpx;
  height: 52rpx;
  padding: 30rpx 0 40rpx;
  color: #454545;
}
/* 评论部分 */
.comment{
  text-align: left;
  padding: 0 30rpx;
}
.comment__block{
  display: flex;
  margin-top:35rpx;
}
.comment__block__quote{
  font-weight: 900;
  font-size: 75rpx;
  padding: 0 25rpx 0 15rpx ;
}
.comment--text{
  font-size: 30rpx;
  line-height: 44rpx;
}
.comment--voice{
  font-size: 30rpx;
  line-height: 80rpx;
  height: 80rpx;
  width: 400rpx;
  border:1px solid #ccc;
  background: #eee;
  border-radius: 10rpx;
  padding: 10rpx 30rpx;
  color: #494949;
}
.avatar{
  display: inline-block;
  vertical-align: middle;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #f5e069;
}
.comment__info{
  margin-left: 20rpx;
  display: inline-block;
  font-size:32rpx;
  line-height: 44rpx; 
  color: #666;
}
.comment__content{
  
}
/* 按钮 */
.operation{
  margin-top: 70rpx;
  display: flex;
  justify-content: space-around;
}
.btn{
  box-sizing: content-box;
  color: #bbb;
  background: #fff;
  border-radius: 20rpx;
  border: 2rpx solid #ccc;
  font-size: 30rpx;
  line-height:80rpx;
  width:300rpx;
  height: 80rpx;
  /* display: inline-block; */
}